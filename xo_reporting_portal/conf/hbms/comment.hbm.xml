<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class  name="com.xo.web.ext.comment.models.Comment"  table="comment">
    <id name="messageId" type="java.lang.Integer">
            <column name="message_id" />
            <generator class="identity" />
    </id>
    <property name="ts" type="timestamp">
      <column length="100" name="ts"/>
    </property>
    <many-to-one class="com.xo.web.models.system.User" fetch="select" name="user">
      <column length="40" name="user_id" not-null="true"/>
    </many-to-one>
    <property name="message" type="string">
      <column length="500" name="message" />
    </property>
    <property name="sheetName" type="string">
      <column length="30" name="sheet_name" />
    </property>
     <property name="dashboardName" type="string">
      <column length="30" name="dashboard_name" />
    </property>
  </class>
   <query name="com.xo.web.ext.comment.models.Comment.readAllComments">
        <![CDATA[
            SELECT comment FROM com.xo.web.ext.comment.models.Comment comment
        ]]>
    </query>
    <query name="com.xo.web.ext.comment.models.Comment.readSheetComments">
    	<![CDATA[
    		SELECT comment FROM com.xo.web.ext.comment.models.Comment comment WHERE sheetName = :activeSheet and dashboardName = :activeDashboard ORDER BY comment.ts ASC
    	]]>
    </query>
</hibernate-mapping>